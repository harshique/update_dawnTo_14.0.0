    <div class="prd_ctr_sec1_small1">{{ section.settings.smallText1 }}</div>
    <div class="prd_ctr_sec1_small2">{{ section.settings.smallText2 }}</div>
  </div>
  </div>
  <div class="section1_prd_ctr_div2">
    <div class="div2_wrapper_sec1">
     <h1 class="sec_1_changes">ABSOLUTELY.</h1>
