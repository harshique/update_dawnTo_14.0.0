<div class="strap_mech_container change_design">
  <div class="image_text_container">
    <p class="first_small_text change_design fade_in_animation_left">NO MORE BLIND DIGGING</p>
    {% if section.settings['video-url'] != blank %}
      <video
        autoplay="autoplay"
        loop="loop"
        muted="muted"
        playsinline
        poster="{{ section.settings.poster_image | img_url: 'master' }}"
      >
        <source src="{{ section.settings.video-url }}" type="video/webm">
        <source src=" {{ section.settings.video-url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.first_image != blank -%}
      <img class="first_image" src="{{ section.settings.first_image | image_url }}">
    {% endif %}
    <h1 class="big_text change_design fade_in_animation_left">{{ section.settings.heading }}</h1>
  </div>

  <div class="lower_div_coverd_text_btn change_design">
    <div class="text-only-div">
      <h2>{{ section.settings.subheading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
    </div>
    <div class="klaviyo_form_trigger button_svg_wrapper change_design">
      <button class="enter_email-button change_design">CLICK FOR EARLY ACCESS</button>
    </div>
  </div>
</div>

