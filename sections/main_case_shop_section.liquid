<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
<style>
  .swiper-button-prev {
    display: flex !important;
  }

  .swiper-button-next {
    display: flex !important;
  }

  .swiper-slide>img,
  .swiper-slide>video {
    object-fit: contain;
  }

  .swiper-slide>video {
    height: 500px;
    width: 500px;
    object-fit: contain;
  }

  .swiper-slide.product-single__media {
    background: white;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .swiper-button-prev {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    left: 5rem;
    gap: 1rem;
  }

  img.next_prev_logo {
    width: 40px;
    height: 40px;
  }

  span.back_text {
    font-size: 10px;
    font-weight: 800;
    color: black;
    padding-left: 1rem;
  }

  .swiper-button-next {
    display: flex !important;
    right: 10rem;
    flex-direction: column;
    gap: 1rem;
  }

  span.next_text {
    font-size: 10px;
    font-weight: 800;
    color: black;
    padding-left: 1rem;
  }

  .swiper-button-prev:after,
  .swiper-button-next:after,
  .swiper-rtl .swiper-button-next:after {
    content: none;
  }

  h1.case_product_title_sec2 {
    margin: 0;
    font-size: 90px;
    letter-spacing: 30px;
    font-weight: 900;
    color: #000;
    line-height: 130px;
    text-transform: uppercase;
  }
</style>
<div class="main_case_page_sec2_container">
  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      {% for media in product.media %}
        {% render 'media', media: media %}
      {% endfor %}
    </div>
    <div class="swiper-button-next">
      <span class="next_text">NEXT</span>
      <img
        class="next_prev_logo"
        src="https://cdn.shopify.com/s/files/1/0583/8756/2634/files/Combined_Shape.svg?v=1714135010"
      >
    </div>
    <div class="swiper-button-prev">
      <img
        class="next_prev_logo"
        src="https://cdn.shopify.com/s/files/1/0583/8756/2634/files/Combined_Shape_Copy.svg?v=1714135010"
      >
      <span class="back_text">BACK</span>
    </div>
  </div>
  <h1 class="case_product_title_sec2">{{ product.title }}</h1>
  <div class="main-case-sec2_last_wrapper">
    <div class="price_cta_button_wrapperDiv">
      <div class="first_div_star_price_wrapper">
        <div class="star-with-text">
          <span class="r-rating-product rati">
            <svg
