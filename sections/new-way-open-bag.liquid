<div class="strap_mech_container new_way_section">
  <div class="image_text_container">
    <p class="first_small_text  opening_case fade_in_animation_right">RIP : GOOD OLD ZIPPER</p>
    {% if section.settings['video-url'] != blank %}
      <video
        autoplay="autoplay"
        loop="loop"
        muted="muted"
        playsinline
        poster="{{ section.settings.poster_image | img_url: 'master' }}"
      >
        <source src="{{ section.settings.video-url }}" type="video/webm">
        <source src=" {{ section.settings.video-url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.first_image != blank -%}
      <img class="first_image" src="{{ section.settings.first_image | image_url }}">
    {% endif %}
    <h1 class="big_text opening_case fade_in_animation_right">{{ section.settings.heading }}</h1>
  </div>

  <div class="lower_div_coverd_text_btn modify_styling">
    <div class="text-only-div modify_styling">
      <h2>{{ section.settings.subheading }}</h2>
      <p>{{ section.settings.paragraph }}</p>
    </div>
    <div class="klaviyo_form_trigger button_svg_wrapper modify_styling">
      <button class="enter_email-button modify_styling">CLICK FOR EARLY ACCESS</button>
    </div>
  </div>
</div>

